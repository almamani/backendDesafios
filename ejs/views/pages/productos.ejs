<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container-fluid">
  <main>
    <div class="container w-75 p-3 border mt-2">
      <h2 class="text-white bg-dark">Listado de Productos</h2>
      <% if(products){ %>
        <div class="table-responsive">
          <table class="table w-75 mx-auto mt-4">
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Imagen</th>
            </tr>
            <% products.map( product=> { %>
              <tr>
                <td class="align-middle">
                  <%=product.title%>
                </td>
                <td class="align-middle">
                  <%=product.price%>
                </td>
                <td><img width="70" src=<%=product.thumbnail %> alt="Imagen Producto"></td>
              </tr>
              <% } ) %>
          </table>
        </div>
        <% } else{ %>
          <h3 class="mt-3 text-center">No se encontraron productos</h3>
          <% } %>
            <div class="mt-3  text-center">
              <a href="/" type="button" class="btn btn-dark">Ingreso de Productos</a>
            </div>
    </div>
  </main>
</body>

</html>