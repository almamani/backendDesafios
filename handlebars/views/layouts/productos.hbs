<html lang="es">
      
      {{> head}}

  <body class="container-fluid">

    <main>
      <div class="container w-75 p-3 border mt-2">
        <h2 class="text-white bg-dark">Listado de Productos</h2>
               {{#if products}}
                 <div class="table-responsive">               
                  <table class="table w-75 mx-auto mt-4">
                      <tr>
                          <th>Nombre</th>
                          <th>Precio</th>
                          <th>Imagen</th>
                      </tr>
                      {{#each products}}
                      <tr>
                          <td class="align-middle">{{this.title}}</td>
                          <td class="align-middle">${{this.price}}</td>
                          <td ><img width="70" src={{this.thumbnail}} alt="Imagen Producto"></td>
                      </tr>
                      {{/each}}
                  </table>
              </div>
              {{else}}
                <h3 class="text-center">No se encontraron productos</h3>
            {{/if}}
          <div class="mt-3 text-center">
            <a href="/" type="button" class="btn btn-dark">Registro de Productos</a>
          </div>
      </div>
    </main>

  </body>

</html>